@model List<AlmaHogarFront.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5">
                <i class="bi bi-boxes"></i> Gestión de Productos
            </h1>
            <p class="text-muted">Administra el catálogo de productos de tu tienda</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create", "Producto")" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nuevo Producto
            </a>
        </div>
    </div>

    <!-- Alerta de Error -->
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Error:</strong> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabla de Productos -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light border-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> 
                            @Model.Count Productos en el Sistema
                        </h5>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 8%;">
                                    <i class="bi bi-hash"></i> ID
                                </th>
                                <th style="width: 20%;">
                                    <i class="bi bi-tag"></i> Nombre
                                </th>
                                <th style="width: 20%;">
                                    <i class="bi bi-file-text"></i> Descripción
                                </th>
                                <th style="width: 10%;">
                                    <i class="bi bi-folder"></i> Categoría
                                </th>
                                <th style="width: 10%;">
                                    <i class="bi bi-cash-coin"></i> Precio
                                </th>
                                <th style="width: 10%;">
                                    <i class="bi bi-box"></i> Stock
                                </th>
                                <th style="width: 12%;">
                                    <i class="bi bi-gear"></i> Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr>
                                    <td>
                                        <code>@producto.codigo</code>
                                    </td>
                                    <td>
                                        <strong>@producto.nombre</strong>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @if (producto.descripcion?.Length > 50)
                                            {
                                                @producto.descripcion.Substring(0, 50)@("...")
                                            }
                                            else
                                            {
                                                @producto.descripcion
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        @if (producto.categoria != null)
                                        {
                                            <span class="badge bg-info text-dark">
                                                @producto.categoria.nombre
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin categoría</span>
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-success">S/. @producto.precio.ToString("F2")</strong>
                                    </td>
                                    <td>
                                        @if (producto.stock > 20)
                                        {
                                            <span class="badge bg-success">@producto.stock unidades</span>
                                        }
                                        else if (producto.stock > 5)
                                        {
                                            <span class="badge bg-warning text-dark">@producto.stock unidades</span>
                                        }
                                        else if (producto.stock > 0)
                                        {
                                            <span class="badge bg-danger">@producto.stock unidades</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark">Agotado</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Edit", "Producto", new { id = producto.codigo })" 
                                               class="btn btn-outline-warning" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal@producto.codigo"
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </div>

                                        <!-- Modal de Confirmación de Eliminación -->
                                        <div class="modal fade" id="deleteModal@producto.codigo" tabindex="-1">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header border-danger">
                                                        <h5 class="modal-title">
                                                            <i class="bi bi-exclamation-circle text-danger"></i>
                                                            Confirmar eliminación
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>¿Estás seguro de que deseas eliminar el producto <strong>@producto.nombre</strong>?</p>
                                                        <p class="text-danger small mb-0">
                                                            <i class="bi bi-info-circle"></i> Esta acción no se puede deshacer.
                                                        </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            Cancelar
                                                        </button>
                                                        <a href="@Url.Action("Delete", "Producto", new { id = producto.codigo })" 
                                                           class="btn btn-danger">
                                                            <i class="bi bi-trash"></i> Eliminar
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer bg-light text-muted small">
                <i class="bi bi-info-circle"></i> 
                Total de @Model.Count productos registrados en el sistema
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>Sin productos:</strong> No hay productos registrados en el sistema.
            <a href="@Url.Action("Create", "Producto")" class="alert-link">
                Crea el primero
            </a>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
</div>

<!-- Estilos personalizados -->
<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
        transition: background-color 0.2s ease;
    }

    .badge {
        padding: 0.4rem 0.6rem;
        font-size: 0.85rem;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.85rem;
    }

    h1.display-5 {
        color: #333;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .card {
        border: 1px solid #e0e0e0;
        border-radius: 0.5rem;
    }

    .card-header {
        background: linear-gradient(135deg, #f5f7fa 0%, #f8f9fb 100%);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
</style>
