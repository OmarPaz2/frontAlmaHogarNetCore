@model AlmaHogarFront.DTO.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Header -->
            <div class="mb-4">
                <h1 class="display-6">
                    <i class="bi bi-pencil-square"></i> Editar Producto
                </h1>
                <p class="text-muted">
                    Actualiza la información del producto 
                    <strong>@Model?.nombre</strong>
                </p>
            </div>

            <!-- Alerta de Error -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Error:</strong> @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Card del Formulario -->
            <div class="card shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-form-check"></i> Información del Producto
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.codigo" method="post" novalidate class="needs-validation">
                        <!-- ID (Oculto) -->
                        <input type="hidden" asp-for="codigo" />

                        <!-- Nombre del Producto -->
                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label">
                                <i class="bi bi-tag"></i> Nombre del Producto
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="nombre"
                                   class="form-control @(ViewData.ModelState["nombre"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                   placeholder="Ej: Almohada Ergonómica"
                                   required>
                            <span asp-validation-for="nombre" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="descripcion" class="form-label">
                                <i class="bi bi-file-text"></i> Descripción
                                <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="descripcion"
                                      class="form-control @(ViewData.ModelState["descripcion"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                      rows="3"
                                      placeholder="Describe las características del producto..."
                                      required></textarea>
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-info-circle"></i> Máximo 500 caracteres
                            </small>
                            <span asp-validation-for="descripcion" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Row: Precio y Stock -->
                        <div class="row">
                            <!-- Precio -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="precio" class="form-label">
                                    <i class="bi bi-cash-coin"></i> Precio (S/.)
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">S/.</span>
                                    <input asp-for="precio"
                                           type="number"
                                           step="0.01"
                                           min="0"
                                           class="form-control @(ViewData.ModelState["precio"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                           placeholder="0.00"
                                           required>
                                </div>
                                <span asp-validation-for="precio" class="invalid-feedback d-block"></span>
                            </div>

                            <!-- Stock -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="stock" class="form-label">
                                    <i class="bi bi-box"></i> Stock
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="stock"
                                       type="number"
                                       min="0"
                                       class="form-control @(ViewData.ModelState["stock"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="0"
                                       required>
                                <span asp-validation-for="stock" class="invalid-feedback d-block"></span>
                            </div>
                        </div>

                        <!-- Categoría -->
                        <div class="mb-3">
                            <label asp-for="idCategoria" class="form-label">
                                <i class="bi bi-folder"></i> Categoría
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="idCategoria"
                                    class="form-select @(ViewData.ModelState["idCategoria"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                    required>
                                <option value="">-- Selecciona una categoría --</option>
                                @if (ViewBag.Categorias != null)
                                {
                                    @foreach (var categoria in ViewBag.Categorias as List<AlmaHogarFront.Models.Categoria>)
                                    {
                                        <option value="@categoria.codigo" 
                                                selected="@(Model?.idCategoria == categoria.codigo ? "selected" : "")">
                                            @categoria.nombre
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="idCategoria" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Errores de Validación General -->
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Any()))
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-circle"></i>
                                <strong>Errores de validación:</strong>
                                <ul class="mb-0 mt-2">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        @foreach (var error in modelState.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Info del Producto -->
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong>Información:</strong>
                            <ul class="mb-0 mt-2 small">
                                <li><strong>ID Producto:</strong> @Model.codigo</li>
                                <li><strong>Última modificación:</strong> Desde el sistema</li>
                            </ul>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="mt-4 pt-3 border-top">
                            <div class="d-grid gap-2 d-sm-flex justify-content-sm-end">
                                <a href="@Url.Action("Index", "Producto")" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancelar
                                </a>
                                <button type="reset" class="btn btn-outline-warning">
                                    <i class="bi bi-arrow-clockwise"></i> Restablecer
                                </button>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Hints -->
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-lightbulb"></i>
                        <strong>Consejos:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Puedes cambiar cualquier información del producto</li>
                            <li>Los cambios se aplicarán inmediatamente en el sistema</li>
                            <li>Asegúrate de verificar la información antes de guardar</li>
                            <li>El ID del producto no se puede modificar</li>
                        </ul>
                    </small>
                </div>
            </div>

            <!-- Link de Ayuda -->
            <div class="mt-3 text-center">
                <small class="text-muted">
                    <a href="@Url.Action("Index", "Producto")" class="text-decoration-none">
                        ← Volver a la lista de productos
                    </a>
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-success {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .input-group-text {
        background-color: #f5f5f5;
        border-color: #dee2e6;
    }

    h1.display-6 {
        color: #333;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .card {
        border: 1px solid #e0e0e0;
        border-radius: 0.5rem;
    }

    .card-header {
        background: linear-gradient(135deg, #f5f7fa 0%, #f8f9fb 100%);
    }

    .alert {
        border-radius: 0.5rem;
    }

    .text-danger {
        color: #dc3545;
        font-weight: bold;
    }

    ul li {
        margin-bottom: 0.25rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
